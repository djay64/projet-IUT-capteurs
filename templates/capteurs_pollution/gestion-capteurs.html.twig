              <span>{{form_widget(form.nomDuCapteur, {'attr': {'class': 'form-control-sm'}})}}</span>
            </div>

            </div>
            <div class="d-flex justify-content-end mt-3">
                 <div class="p-1"><button type="submit" class="btn btn-primary">Valider</button></div>
